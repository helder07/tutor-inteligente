                <div
                  style={{ display: 'flex', flexDirection: 'column' }}
                >
                  <p>A9 - Tabelas, gráficos e textos se complementam</p>
                </div>
              </a>
            </li>
          </ul>
        </li>
      </ul>
      <!--end::Sidebar Menu-->
    </nav>
  </div>
  <!--end::Sidebar Wrapper-->
</aside>
<!--end::Sidebar-->
